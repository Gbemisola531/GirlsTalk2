<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi,User"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:orientation="vertical"
        android:paddingRight="30sp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/signUpEmailParent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="30sp"
                android:src="@drawable/line"/>

            <EditText
                android:textSize="16sp"
                android:textColorHint="@color/colorPrimaryDark"
                android:translationX="-5dp"
                android:padding="8sp"
                android:id="@+id/signUpEmail"
                android:hint="Enter Email..."
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/inputbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signUpPasswordParent"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="30sp"
                android:src="@drawable/line"/>

            <EditText
                android:textSize="16sp"
                android:inputType="textPassword"
                android:textColorHint="@color/colorPrimaryDark"
                android:translationX="-5dp"
                android:padding="8sp"
                android:id="@+id/signUpPassword"
                android:hint="Enter Password..."
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:background="@drawable/inputbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/signUpConfirmPasswordParent"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="30sp"
                android:src="@drawable/line"/>

            <EditText
                android:textSize="16sp"
                android:inputType="textPassword"
                android:textColorHint="@color/colorPrimaryDark"
                android:translationX="-5dp"
                android:padding="8sp"
                android:id="@+id/signUpConfirmPassword"
                android:drawableLeft="@drawable/ic_loop_black_24dp"
                android:drawablePadding="10dp"
                android:hint="Enter Password again to confirm..."
                android:background="@drawable/inputbg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/faBtnlg2"
            android:layout_marginTop="15sp"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#134ead"/>

    </LinearLayout>

</RelativeLayout>